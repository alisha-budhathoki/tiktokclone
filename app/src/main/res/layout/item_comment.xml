<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_pic_cmntr"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/bkgrnd"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"/>
    <TextView
        android:id="@+id/txt_cmntr_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="username"
        app:layout_constraintStart_toEndOf="@+id/img_pic_cmntr"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/txt_comment_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="comment contents"
        app:layout_constraintStart_toEndOf="@+id/img_pic_cmntr"
        app:layout_constraintTop_toBottomOf="@+id/txt_cmntr_name"
        android:layout_marginStart="20dp"/>
    <ImageView
        android:id="@+id/image_love_cmnt"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/icon_love_fill"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="20dp"/>

    <TextView
        android:id="@+id/txt_comment_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10:15"
        android:textColor="@color/primaryGrey"
        app:layout_constraintStart_toEndOf="@+id/img_pic_cmntr"
        app:layout_constraintTop_toBottomOf="@+id/txt_comment_content"
        android:layout_marginStart="20dp"/>

    <TextView
        android:id="@+id/txt_replies"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/img_pic_cmntr"
        app:layout_constraintTop_toBottomOf="@+id/txt_comment_time"
        android:layout_marginStart="20dp"
        android:text="View replies"/>


</androidx.constraintlayout.widget.ConstraintLayout>